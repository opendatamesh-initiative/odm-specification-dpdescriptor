            "type": "object",
            "properties": {
                "inputPorts": {
                    "type": "array",
                    "items": {
                        "$ref": "#/$defs/inputPortOrReference"
                    }
                },
                "outputPorts": {
                    "type": "array",
                    "items": {
                        "$ref": "#/$defs/outputPortOrReference"
                    }
                },
                "discoveryPorts": {
                    "type": "array",
                    "items": {
                        "$ref": "#/$defs/discoveryPortOrReference"
                    }
                },
                "observabilityPorts": {
                    "type": "array",
                    "items": {
                        "$ref": "#/$defs/observabilityPortOrReference"
                    }
                },
                "controlPorts": {
                    "type": "array",
                    "items": {
                        "$ref": "#/$defs/controlPortOrReference"
                    }
                }
            },
            "required": ["outputPorts"]
