                "description": {
                    "description": "",
                    "type": "string"
                },
                "channel": {
                    "description": "",
                    "type": "string"
                },
                "address": {
                    "description": "",
                    "type": "string"
                }
            },
            "patternProperties": {
                "^x-": true
            }
        },
